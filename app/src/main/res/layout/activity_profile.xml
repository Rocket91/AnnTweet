<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/colorBlackTwitter">


    <ImageView
        android:id="@+id/ivProfileBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/ivProfileImage3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/btnFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:layout_below="@id/ivProfileBackgroundImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorBlue"
        android:background="@drawable/rounded_corner"/>

    <TextView
        android:id="@+id/tvName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Florvil Hyppolite"
        android:layout_below="@id/ivProfileImage3"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/tvScreenName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hyppolite509"
        android:layout_below="@id/tvName3"
        android:layout_alignStart="@id/tvName3"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScreenName3"
        android:text="m se sel neg led malgre mwen mouri fanm tj renmenm"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@id/tvName3"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/tvFollowingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="450 Following"
        android:layout_below="@id/tvDescription"
        android:layout_alignStart="@id/tvName3"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/tvFollowersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4590 Followers"
        android:layout_below="@id/tvDescription"
        android:layout_toEndOf="@id/tvFollowingCount"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/colorWhite"
        />
</RelativeLayout>